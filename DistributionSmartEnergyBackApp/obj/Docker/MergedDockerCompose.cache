networks:
  backNetwork:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "true"
services:
  apigateway:
    build:
      context: E:\clonedProject\Web2-Project\DistributionSmartEnergyBackApp
      dockerfile: API gateway/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: apigateway
    networks:
      backNetwork: {}
    ports:
    - published: 24757
      target: 80
    - target: 80
    volumes:
    - C:\Users\wishm\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  distributionsmartenergybackapp:
    build:
      context: E:\clonedProject\Web2-Project\DistributionSmartEnergyBackApp
      dockerfile: DistributionSmartEnergyBackApp/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseName: DocumentDB
      DatabasePassword: Password1!
      DatabasePort: '1433'
      DatabaseServer: mssql-server
      DatabaseUser: SA
    image: distributionsmartenergybackapp
    networks:
      backNetwork: {}
    ports:
    - published: 24885
      target: 80
    - target: 80
  distributionsmartenergyusermicroservice:
    build:
      context: E:\clonedProject\Web2-Project\DistributionSmartEnergyBackApp
      dockerfile: DistributionSmartEnergyUserMicroservice/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseName: UserDB
      DatabasePassword: Password1!
      DatabasePort: '1433'
      DatabaseServer: mssql-server
      DatabaseUser: SA
    image: distributionsmartenergyusermicroservice
    networks:
      backNetwork: {}
    ports:
    - published: 28543
      target: 80
    - target: 80
  mssql-server:
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Express
      MSSQL_SA_PASSWORD: Password1!
    image: mcr.microsoft.com/mssql/server:2017-latest-ubuntu
    networks:
      backNetwork: {}
    ports:
    - published: 1433
      target: 1433
  notificationmicroservice:
    build:
      context: E:\clonedProject\Web2-Project\DistributionSmartEnergyBackApp
      dockerfile: NotificationMicroservice/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseName: NotificationDB
      DatabasePassword: Password1!
      DatabasePort: '1433'
      DatabaseServer: mssql-server
      DatabaseUser: SA
    image: notificationmicroservice
    networks:
      backNetwork: {}
    ports:
    - published: 35827
      target: 80
    - target: 80
version: '3.4'